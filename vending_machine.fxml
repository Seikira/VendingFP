<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>

<GridPane xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10" stylesheets="@styles.css">
    <Label text="Snack Haven" alignment="CENTER" GridPane.columnIndex="0" GridPane.columnSpan="3" GridPane.rowIndex="0" styleClass="title"/>
    
    <Button id="pretzelsBtn" text="Pretzels $1.50" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
    <Button id="sugarCookiesBtn" text="Cookies $2.00" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
    <Button id="chocolateBarBtn" text="Snickers $1.75" GridPane.rowIndex="1" GridPane.columnIndex="2"/>
    <Button id="chipsBtn" text="Chips $1.25" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
    <Button id="chocolateChipCookiesBtn" text="CC Cooki $2.25" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
    <Button id="sourCandyBtn" text="Candy $1.50" GridPane.rowIndex="2" GridPane.columnIndex="2"/>
    
    <Label id="totalLabel" text="Total: $0.00" GridPane.rowIndex="3" GridPane.columnIndex="0" styleClass="totalLabel"/>
    
    <Button id="buyBtn" text="Buy" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
    <Button id="clearSelectionsBtn" text="Clear" GridPane.rowIndex="4" GridPane.columnIndex="1"/>
    <Button id="cancelBtn" text="Cancel" GridPane.rowIndex="4" GridPane.columnIndex="2"/>
</GridPane>
